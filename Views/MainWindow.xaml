<Window x:Class="FlowDiagram.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Flow Diagram" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" x:Name="FlowPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Flow nodes and connectors will be added here programmatically -->
        </StackPanel>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Test" Click="ButtonBase_OnClick" />
        </WrapPanel>
    </Grid>
</Window>